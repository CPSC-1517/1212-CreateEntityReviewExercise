@page "{SelectedProductId?}"
@model WestWindWebApp.Pages.ProductCrudModel
@{
    ViewData["Title"] = "New Product";
}
<h1>New Product</h1>

@if (Model.HasFeedback)
{
    <p style="color:forestgreen; font-weight: bold;"> @Model.FeedbackMessage</p>
}

@if (Model.HasError)
{
    <p style="color:firebrick; font-weight: bold;"> @Model.ErrorMessage</p>
}

<form method="post">
    <!--TODO: Create the Product form with form fields for:

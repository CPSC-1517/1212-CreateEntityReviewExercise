        c) CategoryId (use select control and add a empty option)
        d) QuantityPerUnit
        e) MinimumOrderQuantity
        f) UnitPrice
        g) UnitsOnOrder
    -->
    
    <button type="submit" asp-page-handler="AddProduct">Add Product</button>    
    <button type="submit" asp-page-handler="Clear" formnovalidate>Clear</button>
    
</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}